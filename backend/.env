# ========================================
# Lost & Found System - Environment Variables
# ========================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://192.168.8.124:3000

# Database Configuration
MONGODB_URI=mongodb+srv://nethmi:nethmi@cluster0.xp4aa6i.mongodb.net/Prediction?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Timezone Configuration
DEFAULT_TIMEZONE=Asia/Colombo

# ========================================
# SMS Service Configuration
# ========================================
# Options: 'twilio', 'custom', 'mock'
SMS_PROVIDER=mock

# For Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
SMS_FROM_NUMBER=+94XXXXXXXXX

# For Custom SMS Gateway
SMS_API_URL=https://your-sms-gateway.com/api/send
SMS_API_KEY=your_sms_api_key_here

# ========================================
# Asterisk IVR Configuration
# ========================================
ASTERISK_ENABLED=false
ASTERISK_HOST=localhost
ASTERISK_PORT=5038
ASTERISK_USERNAME=admin
ASTERISK_PASSWORD=your_asterisk_ami_password
ASTERISK_CONTEXT=from-internal
ASTERISK_CALLER_ID=Lost & Found <1000>
IVR_AUDIO_PATH=/var/lib/asterisk/sounds/custom/

# ========================================
# Reminder Scheduler Configuration
# ========================================
# Cron schedule for processing reminders
# Default: '* * * * *' (every minute)
REMINDER_SCHEDULER_CRON=* * * * *

# ========================================
# ML Service Configuration
# ========================================
ML_SERVICE_URL=http://localhost:5001
