# ========================================
# Lost & Found System - Environment Variables
# ========================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb+srv://nethmi:nethmi@cluster0.xp4aa6i.mongodb.net/Prediction?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Timezone Configuration
DEFAULT_TIMEZONE=Asia/Colombo

# ========================================
# SMS Service Configuration
# ========================================
# Options: 'twilio', 'custom', 'mock'
SMS_PROVIDER=mock

# For Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
SMS_FROM_NUMBER=+94XXXXXXXXX

# For Custom SMS Gateway
SMS_API_URL=https://your-sms-gateway.com/api/send
SMS_API_KEY=your_sms_api_key_here

# ========================================
# Asterisk IVR Configuration
# ========================================
ASTERISK_ENABLED=false
ASTERISK_HOST=localhost
ASTERISK_PORT=5038
ASTERISK_USERNAME=admin
ASTERISK_PASSWORD=your_asterisk_ami_password
ASTERISK_CONTEXT=from-internal
ASTERISK_CALLER_ID=Lost & Found <1000>
IVR_AUDIO_PATH=/var/lib/asterisk/sounds/custom/

# ========================================
# Reminder Scheduler Configuration
# ========================================
# Cron schedule for processing reminders
# Default: '* * * * *' (every minute)
# For testing: '*/30 * * * * *' (every 30 seconds)
REMINDER_CRON_SCHEDULE=* * * * *

# ========================================
# File Upload Configuration (for CSV)
# ========================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ========================================
# Email Configuration (optional)
# ========================================
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=Lost & Found System <noreply@lostfound.sliit.lk>

# ========================================
# ML Service Configuration
# ========================================
ML_SERVICE_URL=http://localhost:5001

# ========================================
# Quick Location Archiving (HTTP ingest)
# ========================================
# Optional: protect /api/location/* endpoints used for quick device archiving
# If set, requests must include header: x-device-key: <value>
DEVICE_INGEST_KEY=

# Validation thresholds for archiving
# - MAX_ACCURACY_METERS: discard low-quality GPS pings
# - MAX_SPEED_MPS: reject unrealistic jumps between consecutive pings
MAX_ACCURACY_METERS=50
MAX_SPEED_MPS=15

# ========================================
# Additional Configuration
# ========================================
# Enable detailed logging
DEBUG_MODE=false

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
